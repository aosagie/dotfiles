[user]
	name = Anderson Osagie
	email = osagie@gmail.com
[credential]
	helper = cache --timeout=3600
[merge]
	conflictstyle = diff3
	tool = kdiff3
[mergetool "kdiff3"]
	trustExitCode = false
	keepBackup = false
[color]
	ui = auto
[alias]
	lg = log --graph --pretty=format:'%C(auto)%h%d%Creset %s %C(cyan)(%cr) %C(blue)<%an>%Creset' --abbrev-commit --date=relative
	serve = !git daemon --base-path=. --export-all --reuseaddr --informative-errors --verbose
	g = grep --break --heading --line-number
[push]
	default = simple
[diff]
	;algorithm = histogram
	algorithm = patience
