[user]
	name = Anderson Osagie
	email = osagie@gmail.com
[credential]
	helper = cache --timeout=3600
[merge]
	tool = idea
	conflictstyle = zdiff3
[mergetool "code"]
	cmd = code --wait $MERGED
	; cmd = code --wait --merge $REMOTE $LOCAL $BASE $MERGED
[mergetool "kdiff3"]
	trustExitCode = false
	keepBackup = false
[mergetool "idea"]
	cmd = /usr/local/bin/idea merge \"$LOCAL\" \"$REMOTE\" \"$BASE\" \"$MERGED\"
	trustExitCode = false
[color]
	ui = auto
[alias]
	ll = log --stat --abbrev-commit
	lg = log --color --graph --all --pretty=format:'%C(bold white)%h%Creset %C(auto)%d%Creset %s %C(bold green)(%cr)%Creset %C(bold blue)<%an>%Creset'
	search = "! git log -p -G\"$1\" --all #"
	recent = branch --verbose --sort=-committerdate
	fixup = "! git log origin/mainline..HEAD --oneline | fzf --tmux | cut -d' ' -f1 | xargs -n1 git commit --fixup"
	; hide = update-index --skip-worktree
	; unhide = update-index --no-skip-worktree
	; hidden = "! git ls-files -v | grep '^S' | cut -c3-"
	; show-hidden = "! git show HEAD:\"$1\" | git diff --no-index - \"$1\" #"
[push]
	default = simple
[core]
	askpass =
	autocrlf = input
[pull]
	ff = only
[diff]
	algorithm = histogram
	wsErrorHighlight = all
[include]
	path = ~/.gitconfig.local
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
